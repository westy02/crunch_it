<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <br />
  <div><%= f.label :first_name %>
  <%= f.text_field :firstname %></div><br />
  
  <div><%= f.label :last_name %>
  <%= f.text_field :lastname %></div><br />
  
  <div><%= f.label :email %>
  <%= f.email_field :email %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />
  
  <%= f.label :user_type %><br />
    <%= hidden_field_tag "user[role_ids][]", nil %>
    <dl class="dl-horizontal">
    <% for role in Role.all %>
      <dt><%= check_box_tag "user[role_ids][]", role.id, @user.role_ids.include?(role.id), id: dom_id(role) %></dt> 
     <dl> <%= label_tag dom_id(role), role.name %></dl>
    <% end %>
  </dl><br />

  <div><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
