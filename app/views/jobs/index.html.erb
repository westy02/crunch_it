<%- model_class = Job.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:details) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %> 
      <tr>
        <td><%= link_to job.name, job_path(job)  %></td>
        <td><%= link_to job.details, job_path(job)  %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_job_path(job), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_path(job),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.home', :default => t("helpers.links.home")),
            home_path,
            :class => 'btn btn-inverse' %>

<%= link_to t('.new', :default => t("helpers.links.new job")),
            new_job_path,
            :class => 'btn btn-success' %>
            
<%= link_to t('.new', :default => t("helpers.links.new event")),
            new_event_path,
            :class => 'btn btn-info' %>            
