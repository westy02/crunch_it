<% if signed_in? %>
      <h3> <big>My Diary</big> <ul><%= Date.today.strftime("%A %d %B %Y") %> <%= Time.zone%></ul> 
      	</h3>
     	 <ul class="nav nav-tabs">
  <li class="active"><a href="#diary" data-toggle="tab">Diary</a></li>
  <li><a href="#calendar" data-toggle="tab">Calendar</a></li>
  <li><a href="#events" data-toggle="tab">Events</a></li>
  <li><a href="#jobs" data-toggle="tab">Jobs</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="diary">
  	<%= render :partial => 'day' %>
  	</br>
    <%= link_to "New Event", new_event_path, :class => 'btn btn-info' %>     	
   	<%= link_to "New Job", new_job_path, :class => 'btn btn-success' %>
      	
  	</div>
  
  <div class="tab-pane" id="calendar">
  	<%= render :partial => 'calendar' %>
  	
  	</br>
  	<%= link_to t('.home', :default => t("helpers.links.home")),
            home_path,
            :class => 'btn btn-inverse' %>
    <%= link_to "New Event", new_event_path, :class => 'btn btn-info' %>     	
   	<%= link_to "New Job", new_job_path, :class => 'btn btn-success' %>
      	
  	</div>
  	
  <div class="tab-pane" id="events">
  	<%= render :template => 'events/index' %>
  	</div>
  	
  <div class="tab-pane" id="jobs">
  <%= render :template => 'jobs/index' %>
  </div>

</div>


    
<% else %>
  <%= render root_path %>

<% end %>
