<%- model_class = Job.new.class -%>
  <h3>Active <%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
<table class="table table-bordered" id="list">
  <tbody>
    <% @jobs.each do |job| %> 
      <tr data-toggle="collapse" data-parent="#list" data-target="#details">
        <td><%=job.name%></td>
      </tr>
  </tbody>
</table> 
      <div id="details" class="collapse"> 
      	<div><%= job.details %>
          <div><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_job_path(job), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_path(job),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
         </div>
        </div>
      </div>
      
    <% end %>
 

<button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#details" data-parent="#list-table">
  simple collapsible
</button>
 
