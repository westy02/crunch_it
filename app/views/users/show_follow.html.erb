<div class="row">
  <aside class="span4">
    <section>
     
      <h1><%= @user.name %></h1>
      <span><b>Jobs:</b> <%= @user.jobs.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% unless @users.empty? %>
        
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= yield(:title) %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>